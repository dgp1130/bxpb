{
  "name": "bxpb-runtime",
  "version": "0.0.0",
  "description": "Runtime library for browser extension protocol buffers.",
  "keywords": [
    "browser-extension",
    "browser-extensions",
    "chrome-extension",
    "chrome-extensions",
    "protocol-buffers",
    "library",
    "service",
    "services"
  ],
  "author": "Doug Parker <dgp1130@users.noreply.github.com>",
  "homepage": "https://github.com/dgp1130/bxpb/packages/bxpb-runtime/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgp1130/bxpb.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "build:test-data": "mkdir -p generated/test_data/ && grpc_tools_node_protoc --plugin=protoc-gen-ts=node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:generated/test_data/ --ts_out=generated/test_data/ --proto_path src/test_data/ src/test_data/*.proto",
    "test": "npm run -s build:test-data && karma start --browsers ChromeHeadless --singleRun",
    "test:debug": "npm run -s build:test-data && karma start",
    "clean": "rm -rf dist/ generated/ test-out/ coverage/"
  },
  "bugs": {
    "url": "https://github.com/dgp1130/bxpb/issues"
  },
  "devDependencies": {
    "@types/jasmine": "^3.5.10",
    "grpc-tools": "^1.8.1",
    "karma": "^5.0.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^3.1.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "karma-typescript": "^5.0.2",
    "ts-protoc-gen": "^0.12.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/chrome": "^0.0.106",
    "@types/google-protobuf": "^3.7.2",
    "google-protobuf": "^3.11.4"
  }
}
